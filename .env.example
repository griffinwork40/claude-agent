# .env.example
# Purpose: Document required environment variables for local development.

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="public-anon-key"
SUPABASE_SERVICE_ROLE_KEY="service-role-key"

# Anthropic configuration
ANTHROPIC_API_KEY="set-your-anthropic-key"

# Browser automation service
BROWSER_SERVICE_URL="http://localhost:3001"
BROWSER_SERVICE_API_KEY="replace-with-secure-key"

# Google OAuth configuration for Gmail integration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_OAUTH_REDIRECT_URI="http://localhost:3000/api/integrations/gmail/callback"
GOOGLE_GMAIL_SCOPES="https://www.googleapis.com/auth/gmail.modify"
